<h1>Editing Book</h1>

<% if @book.errors.any? %>
<div class="error-box">
  <div class="error-title"><%= @book.errors.count %> errors prohibited this book from being saved:</div>
    <ul>
     <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
    </ul>
<% end %>
</div>

<%= form_with model: @book, url:update_book_path(@book.id), method: :patch, local:true do |f| %>
<div class="area">
    <p>本のタイトル</p>
    <%= f.text_field :title %>
</div>
<div class="area">
    <p>感想</p>
    <%= f.text_area :body %>
</div>
<div class="toukou">
    <%= f.submit 'Update Book' %>
</div>
<%= link_to "Show", book_path(@book.id) %>
|
<a href="/books">Back</a>
<% end %>