<body>

<% if @book.errors.any? %>
<div class="error-box">
  <div class="error-title"><%= @book.errors.count %> errors prohibited this book from being saved:</div>
    <ul>
     <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
    </ul>
<% end %>
</div>


<% if flash[:notice] %>
     <p class="flash">
       <%= flash[:notice] %>
     </p>
<% end %>
<p>
  <strong>本のタイトル:</strong>
  <%= @book.title %>
</p>
<p>
  <strong>感想:</strong>
  <%= @book.body %>
</p>
<%= link_to "Edit", edit_book_path(@book.id) %>
|
<a href="/books">Back</a>
</body>
